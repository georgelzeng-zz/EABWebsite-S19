.content
  = render :partial => 'users/nav_bar', :locals => { :current_user => current_user }

.content
  = render :partial => 'users/flash_messages', :locals => { :flash => flash }

%h1 Create Team Page

= form_for :team, url: team_create_path, html: { multipart: true } do |form|

  = form.label 'Team Name'
  = form.text_field :name

  = form.label 'Team Picture'
  = form.file_field :image

  = form.label 'Description'
  = form.text_field :description

  = form.label 'Team Password'
  = form.text_field :password

  = form.submit 'Create Team'

= link_to 'Back', teams_path
