- flash.each do |type, msg|
  %div{:class => "alert alert-#{type == :notice ? "success" : type} fadeout", "data-dismiss" => "alert"}
    %button.close &times;
    = msg if msg.is_a?(String)

%table{:border => 0}
  %tbody
    %tr
      %td
        %h1.lol= link_to 'Entrepreneurs @ Berkeley', home_path
      %td
        &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp
      %td
        = link_to 'Login', new_user_session_path
        &nbsp &nbsp
      %td
        = link_to 'Create New Account', new_user_registration_path
        &nbsp &nbsp
      %td
        = link_to 'Logout', destroy_user_session_path, :method => :delete
        &nbsp &nbsp
      %td
        &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp
      %td
        &nbsp &nbsp
      %td
        = image_tag(current_user.image.url(:small))
      %td
        = link_to "#{current_user.first} #{current_user.last}", user_path(current_user)

- if current_user.admin?
  =link_to 'Admin View', users_admin_path
  
%h2 All Users

= form_tag(users_path, :method => 'GET') do
  = text_field_tag(:search, params[:search])
  = submit_tag "Search", name: nil

%table.table-striped.col-md-10#users
  %thead
    %tr
      %th First
      %th Last
      %th Team
      %th Skillset
      %th Facebook
      %th LinkedIn
      %th Privileges

  %tbody
    - @users.each do |user|
      %tr
        %td= user.first
        %td= user.last
        %td= user.team
        %td= user.skillset
        %td= user.facebook
        %td= user.linkedinLstring
        %td= user.privileges
        %td= link_to "More about #{user.first}", user_path(user)

= link_to 'Back', home_path
