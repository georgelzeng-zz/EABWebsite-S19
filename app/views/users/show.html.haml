.page_format{:style => " margin-left: 15px;"}

%nav.navbar.navbar-expand-lg.navbar-light.bg-light
  %div.container
    %a.navbar-brand{:href => home_path} Entrepreneurs @ Berkeley
    %button.navbar-toggler{"aria-controls" => "navbarSupportedContent", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarSupportedContent", "data-toggle" => "collapse", :type => "button"}
      %span.navbar-toggler-icon

    #navbarSupportedContent.collapse.navbar-collapse
      %ul.navbar-nav.ml-auto
        %li.nav-item
          %a.nav-link#user-link{:href => user_path(current_user)}
            = image_tag current_user.image.url
            -# = image_tag current_user.image.url(:small)
            #{current_user.first} #{current_user.first}

        &nbsp

        %li.nav-item
          %a.nav-link{:href => destroy_user_session_path, "data-method" => "delete"} Logout


%div.profile-container.container
  %div.row{ style: 'padding-top: 20px;'}
    %div.profile-side-wrapper.col-2
      %table
        %tr
          %td.profPic{ style: 'max-height: 200px; padding-bottom: 10px;'}
            = image_tag @user.image.url(:medium), :style => "border-radius: 50%; max-height: 200px;", class:"img-responsive img-circle"
        %tr.firstName{ style: 'font-size: 18px; text-align: center;' }
          %td.profileName{ style: 'font-size: 18px; text-align: center;' }
            %h3 #{@user.first} #{@user.last}
        %tr
          %td.profileEmail{ style: 'font-size: 14px;' }
            - if current_user.admin?
              = @user.email
            -else
              = "      "
              = @emailName
              = image_tag "atSymbol.jpg", :size => "50x50"
              = @emailHost
              = image_tag "period.png",  :size => "50x50"
              = @emailDomain
        %tr
          %td.socialMedia{ style: 'font-size: 2.6rem; text-align: center;' }
            %a{:href => "#{@user.facebook}"}
              %i.fab.fa-facebook-square

            %a{:href => "#{@user.linkedinLstring}"}
              %i.fab.fa-linkedin

    %div.profile-filler-wrapper.col-1
    %div.profile-main-wrapper.col-9
      %table
        %tr
          %td.profileMajor{ style: 'font-size: 20px;' }
            Major: #{@user.major}
        %tr
          %td.profileYear{ style: 'font-size: 20px;' }
            Year:
            = @user.year
        %tr
          %td.profileTeam{ style: 'font-size: 20px;' }
            Team:
            = @user.team
        %tr
          %td.profileSkills{ style: 'font-size: 20px;' }
            Skills: #{@user.skillset}


    %div.profile-button-wrapper.col-4
      %table
        %tr
          %td
            = link_to 'Back', users_path
            &nbsp &nbsp
          %td
            - if current_user.id == @user.id
              = link_to 'Edit User', edit_page_path(@user)
              &nbsp &nbsp
          %td
            - if current_user.admin?
              = button_to "Delete User", users_path(@user), params: {:toDelete => @user.id}, data: { confirm: "Are you sure?" }, method: :delete
