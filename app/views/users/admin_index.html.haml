- if current_user.admin?
  =link_to 'Regular View', users_path

%h2 All Users

= form_tag(users_admin_path, :method => 'GET') do
  = text_field_tag(:search, params[:search])
  = submit_tag "Search", name: nil

%table.table-striped.col-md-10#users
  %thead
    %tr
      %th First
      %th Last
      %th Email
      %th Team
      %th Skillset
      %th SID
      %th Facebook
      %th LinkedIn
      %th Privileges

  %tbody
    - @users.each do |user|
      %tr
        %td= user.first
        %td= user.last
        %td= user.email
        %td= user.team
        %td= user.skillset
        %td= user.sid
        %td= user.facebook
        %td= user.linkedinLstring
        %td= user.privileges

= link_to 'Back', home_path
